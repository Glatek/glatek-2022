{
  "tasks": {
    "lume": "echo \"import 'lume/cli.ts'\" | deno run -A -",
    "build": "deno task lume",
    "serve": "deno task lume -s"
  },
  "imports": {
    "lume/": "https://deno.land/x/lume@v3.0.7/",
    "lume/cms/": "https://cdn.jsdelivr.net/gh/lumeland/cms@0.11.5/",
    "lume/jsx-runtime": "https://deno.land/x/ssx@v0.1.12/jsx-runtime.ts"
  },
  "unstable": [
    "temporal",
    "fmt-component"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "lume",
    "types": [
      "lume/types.ts"
    ]
  },
  "lint": {
    "plugins": [
      "https://deno.land/x/lume@v3.0.7/lint.ts"
    ]
  }
}
